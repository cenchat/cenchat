<div class="layout__content wrapper" data-test-main-content="host">
  {{#if this.session.data.authenticated.user.isAnonymous}}
    <article class="card" data-test-main-content="tips">
      <header class="card__header">
        <h3 class="card__heading">Upgrade to a permanent account</h3>
        <p class="card__subheading">You're signed in anonymously. Having a permanent account allows you to access your chats on any device.</p>
      </header>

      <div class="card__actions">
        <CenLinkButton href={{url-for "site.page.sign-in"}}>
          Upgrade
        </CenLinkButton>
      </div>
    </article>
  {{/if}}

  <article class="card">
    <header class="card__header">
      <h3 class="card__heading">Own a blog?</h3>
      <p class="card__subheading">Use Cenchat for a more personal way to engage with your audience</p>
    </header>

    <div class="card__actions">
      <CenLinkButton href="https://cenchat.com/blog/2019/06/06/modern-alternative-to-disqus.html" target="_blank">
        Why Cenchat
      </CenLinkButton>

      <CenLinkButton href="https://cenchat.com/docs/setting-up-on-your-website" target="_blank">
        Get started
      </CenLinkButton>
    </div>
  </article>

  <article class="card">
    <ul class="list">
      <li class="list__item">
        <button class="list__action" {{on "click" this.handleSignOutClick}}></button>
        <CenIcon @class="list__icon" @icon="sign-out-alt" />
        <div class="list__single-line-content">Sign out</div>
      </li>
    </ul>
  </article>

  {{yield}}
</div>
