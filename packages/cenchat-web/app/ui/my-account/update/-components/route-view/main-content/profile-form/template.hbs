<div class="card card--flat" data-test-profile-form="host" ...attributes>
  <CenForm
    class="card__form"
    id="my-account-profile_route-view-main-content-profile-form"
    @onSubmit={{action this.onProfileFormSubmit}}
  >
    <CenInput
      data-test-profile-form="display-username"
      type="text"
      title="Use at least 3 characters and it should only contain letters, numbers, and underscores"
      aria-label="Use at least 3 characters and it should only contain letters, numbers, and underscores"
      maxlength="15"
      pattern="[A-Za-z\d]\w{1,13}[A-Za-z\d]"
      value={{@user.displayUsername}}
      required="true"
      @label="Username"
      @onInput={{action this.handleDisplayUsernameInput}}
    />
  </CenForm>
</div>
