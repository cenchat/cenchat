{{import TopBar from "./top-bar"}}
{{import MainContent from "./main-content"}}

<SideSheet class="side-sheet liquid-fire-side-sheet">
  <TopBar @hasPendingProfileChanges={{@hasPendingProfileChanges}} />

  <MainContent
    @user={{@user}}
    @onProfileUpdateEvent={{action @onProfileUpdateEvent}}
    @onProfileFormSubmit={{action @onProfileFormSubmit}}
  >
    {{yield}}
  </MainContent>
</SideSheet>
