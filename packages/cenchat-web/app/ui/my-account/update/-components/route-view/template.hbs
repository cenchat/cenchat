{{import TopBar from "./top-bar"}}
{{import MainContent from "./main-content"}}

<SideSheet class="liquid-fire-side-sheet">
  <TopBar @hasPendingProfileChanges={{@hasPendingProfileChanges}} />

  <MainContent
    @user={{@user}}
    @onProfileUpdateEvent={{fn @onProfileUpdateEvent}}
    @onProfileFormSubmit={{fn @onProfileFormSubmit}}
  >
    {{yield}}
  </MainContent>
</SideSheet>
