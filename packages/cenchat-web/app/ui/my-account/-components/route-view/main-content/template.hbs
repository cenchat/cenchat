{{import ProfileCard from "./profile-card"}}

<main class="layout__content" data-test-main-content="host">
  <div class="layout__master-pane wrapper">
    <ProfileCard @user={{@user}} />

    <article class="card" data-test-profile-card="host">
      <CenLink class="card__primary-link" href={{url-for "my-account.delete"}} />
      <h2 class="card__heading">Delete account</h2>

      <p class="card__subheading">
        It make take up to 24 hours for your account to be completely deleted
      </p>
    </article>
  </div>

  {{yield}}
</main>
