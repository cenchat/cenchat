{{import ChatList from "./chat-list"}}

<main class="layout__content" data-test-main-content="host" ...attributes>
  {{#if @chats}}
    <div class="layout__master-pane layout__master-pane--list">
      <ChatList @chats={{@chats}} />
    </div>
  {{else}}
    <div class="layout__master-pane layout__master-pane-wrapper">
      <article
        class="card"
        data-test-main-content="empty-state-message"
        ...attributes
      >
        <h2 class="card__heading">Nothing here right now</h2>
        <p class="card__subheading">Your chats will show up here</p>
      </article>
    </div>
  {{/if}}

  {{yield}}
</main>
