<CenTopBar data-test-top-bar="host">
  <CenIconLinkButton
    href={{url-for "chats"}}
    title="Navigate back to previous page"
    aria-label="Navigate back to previous page"
    @icon="arrow-left"
  />

  {{#if (eq this.session.data.authenticated.user.uid @chat.creator.id)}}
    <h2 data-test-top-bar="heading">{{@chat.site.displayName}}</h2>
  {{else}}
    <h2 data-test-top-bar="heading">
      {{or @chat.creator.displayUsername "Anonymous"}}
    </h2>
  {{/if}}

  {{#if @chat.isPublic}}
    <CenIconButton
      data-test-top-bar="turn-off-visibility-button"
      title="Make chat not visible to everyone"
      aria-label="Make chat not visible to everyone"
      @icon="unlock"
      @onClick={{action @onToggleChatVisibilityClick false}}
    />
  {{else}}
    <CenIconButton
      data-test-top-bar="turn-on-visibility-button"
      title="Make chat visible to everyone"
      aria-label="Make chat visible to everyone"
      @icon="lock"
      @onClick={{action @onToggleChatVisibilityClick true}}
    />
  {{/if}}
</CenTopBar>
