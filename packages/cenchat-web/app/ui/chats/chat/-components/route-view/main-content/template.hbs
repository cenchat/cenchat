<InfiniteContent
  class="chats-chat_route-view-main-content side-sheet__content"
  data-test-main-content="host"
  @isReversed="true"
  @isAbleToLoadMoreContent={{if (lte this.currentLimit @chat.reverseDescendingMessages.length) true false}}
  @onLoadMoreContentEvent={{fn this.handleLoadMoreContentEvent}}
  @onScrollToBottom={{fn this.handleScrollToBottom}}
  ...attributes
>
  <MessageList @messages={{@chat.reverseDescendingMessages}} />
  {{yield}}
</InfiniteContent>
