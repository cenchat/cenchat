<article class="card" data-test-site-info="host">
  <ul class="list">
    <li class="list__item">
      <div class="list__multi-line-content">
        <h4 class="list__primary-text">ID</h4>
        <h4 class="list__secondary-text" data-test-site-info="id">{{@site.id}}</h4>
      </div>
    </li>

    <li class="list__item">
      <div class="list__multi-line-content">
        <h4 class="list__primary-text">Name</h4>
        <h4 class="list__secondary-text" data-test-site-info="display-name">{{@site.displayName}}</h4>
      </div>
    </li>

    <li class="list__item">
      <div class="list__multi-line-content">
        <h4 class="list__primary-text">Hostname</h4>
        <h4 class="list__secondary-text" data-test-site-info="hostname">{{@site.hostname}}</h4>
      </div>
    </li>

    <li class="list__item">
      <div class="list__multi-line-content">
        <h4 class="list__primary-text">Brand color</h4>
        <h4 class="list__secondary-text" data-test-site-info="brand-color">{{@site.brandColor}}</h4>
      </div>
    </li>

    <li class="list__item">
      <div class="list__multi-line-content">
        <h4 class="list__primary-text">Theme</h4>
        <h4 class="list__secondary-text" data-test-site-info="theme">{{@site.theme}}</h4>
      </div>
    </li>
  </ul>

  <div class="card__actions">
    <CenLinkButton href={{url-for "sites.site.update"}}>Update</CenLinkButton>
  </div>
</article>
