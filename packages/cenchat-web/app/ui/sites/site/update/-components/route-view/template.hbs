{{import TopBar from "./top-bar"}}
{{import MainContent from "./main-content"}}

<SideSheet class="liquid-fire-side-sheet">
  <TopBar @hasPendingSiteChanges={{@hasPendingSiteChanges}} />

  <MainContent
    @site={{@site}}
    @onSiteUpdateEvent={{action @onSiteUpdateEvent}}
    @onSiteFormSubmit={{action @onSiteFormSubmit}}
  >
    {{yield}}
  </MainContent>
</SideSheet>
