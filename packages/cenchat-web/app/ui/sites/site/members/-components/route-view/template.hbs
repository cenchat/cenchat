{{import TopBar from "./top-bar"}}
{{import MainContent from "./main-content"}}

<SideSheet class="liquid-fire-side-sheet">
  <TopBar @pendingRoleChange={{@pendingRoleChange}} @onSaveRolesClick={{fn @onSaveRolesClick}}/>

  <MainContent
    @admins={{@admins}}
    @moderators={{@moderators}}
    @searchedUsers={{@searchedUsers}}
    @onRoleChange={{fn @onRoleChange}}
    @onSearchUserInput={{fn @onSearchUserInput}}
  >
    {{yield}}
  </MainContent>
</SideSheet>
