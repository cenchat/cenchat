<div
  class="sign-in-card-view-verification-profile"
  data-test-sign-in-card-view-verification-profile="host"
  ...attributes
>
  <header class="sign-in-card-view-verification-profile__header">
    <h2 class="card__heading card__heading--small">Complete your profile</h2>
    <p class="card__subheading">This will help other users to identify you</p>
  </header>

  <CenForm class="sign-in-card-view-verification-profile__form" @onSubmit={{action @onSignInEvent "email-link" @email this.username}}>
    <CenInput
      data-test-sign-in-card-view-verification-profile="username"
      type="text"
      title="Use at least 3 characters and it should only contain letters, numbers, and underscores"
      aria-label="Use at least 3 characters and it should only contain letters, numbers, and underscores"
      maxlength="15"
      pattern="[A-Za-z\d]\w{1,13}[A-Za-z\d]"
      required="true"
      @label="Username"
      @onInput={{action (mut this.username)}}
    />

    <CenButton class="sign-in-card-view-verification-profile__form-submit-button" data-test-sign-in-card-view-verification-profile="sign-in-button" type="submit">
      Sign In
    </CenButton>
  </CenForm>
</div>
