<div class="chat-composer" data-test-chat-composer="host" ...attributes>
  {{textarea
    class="chat-composer__message-field"
    data-test-chat-composer="message-field"
    autocapitalize=true
    placeholder="Type a message..."
    value=this.text
    autoresize=true
    rows=1
    max-rows=6
  }}
  <CenIconButton
    data-test-chat-composer="send-message-button"
    disabled={{not this.text}}
    @icon="paper-plane"
    @onClick={{action this.handleSendMessageClick}}
  />
</div>
